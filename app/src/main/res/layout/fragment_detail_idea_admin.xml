<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.07" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewCreateIdeaAdmin"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="52dp"
            android:fontFamily="@font/sf_compact_bold"
            android:text="Tạo ý tưởng của bạn"
            android:textColor="@color/black"
            android:textSize="32sp"
            app:layout_constraintDimensionRatio="340:80"
            app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.82" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageViewCreatorAdmin"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/mountain_meadow"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
            app:layout_constraintTop_toBottomOf="@+id/textViewCreateIdeaAdmin"
            app:layout_constraintWidth_percent="0.08"
            app:shapeAppearanceOverlay="@style/RadiusImageViewCicler" />

        <TextView
            android:id="@+id/textViewNameCreator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:fontFamily="@font/sf_compact_bold"
            android:text="Nguyen Van A"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewCreator"
            app:layout_constraintStart_toEndOf="@+id/imageViewCreatorAdmin"
            app:layout_constraintTop_toTopOf="@+id/imageViewCreatorAdmin" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageViewIdeaDetail"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="23dp"
            android:background="@color/mountain_meadow"
            app:layout_constraintDimensionRatio="350:203"
            app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
            app:layout_constraintTop_toBottomOf="@id/textViewNameCreator"
            app:layout_constraintWidth_percent="0.85"
            app:shapeAppearanceOverlay="@style/RadiusImageView" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewDescriptionIdeaDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_compact_bold"
            android:text="Nội dung"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="@dimen/dp_23"
            app:layout_constraintStart_toStartOf="@id/guidelineLeft"
            app:layout_constraintTop_toBottomOf="@+id/imageViewIdeaDetail" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewDescriptionContentIdeaDetailAdmin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_compact_regular"
            android:text="Nội dung"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintWidth_percent="0.85"
            app:layout_constraintDimensionRatio=""
            android:layout_marginTop="@dimen/dp_23"
            app:layout_constraintStart_toStartOf="@id/guidelineLeft"
            app:layout_constraintTop_toBottomOf="@+id/textViewDescriptionIdeaDetail" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewTittleAddressDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_compact_bold"
            android:text="Địa chỉ"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="@dimen/dp_23"
            app:layout_constraintStart_toStartOf="@id/guidelineLeft"
            app:layout_constraintTop_toBottomOf="@+id/textViewDescriptionContentIdeaDetailAdmin" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewAddressDetailAdmin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_compact_regular"
            android:text="Nội dung"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintWidth_percent="0.85"
            app:layout_constraintDimensionRatio=""
            android:layout_marginTop="@dimen/dp_23"
            app:layout_constraintStart_toStartOf="@id/guidelineLeft"
            app:layout_constraintTop_toBottomOf="@+id/textViewTittleAddressDetail" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewTittleStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_compact_bold"
            android:text="Ngày bắt đầu"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="@dimen/dp_23"
            app:layout_constraintStart_toStartOf="@id/guidelineLeft"
            app:layout_constraintTop_toBottomOf="@+id/textViewAddressDetailAdmin" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewContentStartAdmin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_compact_regular"
            android:text="22/02/2021"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintWidth_percent="0.85"
            app:layout_constraintDimensionRatio=""
            android:layout_marginTop="@dimen/dp_23"
            app:layout_constraintStart_toStartOf="@id/guidelineLeft"
            app:layout_constraintTop_toBottomOf="@+id/textViewTittleStart" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewTittleStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_compact_bold"
            android:text="Ngày kết thúc"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="@dimen/dp_23"
            app:layout_constraintStart_toStartOf="@id/guidelineLeft"
            app:layout_constraintTop_toBottomOf="@+id/textViewContentStartAdmin" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewContentStopAdmin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_compact_regular"
            android:text="22/02/2022"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintWidth_percent="0.85"
            app:layout_constraintDimensionRatio=""
            android:layout_marginTop="@dimen/dp_23"
            app:layout_constraintStart_toStartOf="@id/guidelineLeft"
            app:layout_constraintTop_toBottomOf="@+id/textViewTittleStop" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintDimensionRatio="170:80"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewContentStopAdmin"
            app:layout_constraintWidth_percent="0.41">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonApprove"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/background_button_green"
                    android:clickable="true"
                    android:elevation="0dp"
                    android:fontFamily="@font/sf_compact_bold"
                    android:text="Duyệt ý tưởng"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:layout_constraintDimensionRatio="170:50"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="44dp"
            app:layout_constraintDimensionRatio="170:80"
            app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
            app:layout_constraintTop_toBottomOf="@+id/textViewContentStopAdmin"
            app:layout_constraintWidth_percent="0.41">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonCanceApprove"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/background_button_destroy"
                    android:clickable="true"
                    android:elevation="0dp"
                    android:focusable="true"
                    android:fontFamily="@font/sf_compact_bold"
                    android:text="Hủy ý tưởng"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:layout_constraintDimensionRatio="170:50"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
